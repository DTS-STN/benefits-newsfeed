---
import { useTranslations } from "../i18n/utils";

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<footer>
  <div class="bg-primary text-white px-2 py-5">
    <div
      class="grid md:grid-cols-3 gap-2 md:gap-4 md:place-content-center max-w-7xl mx-auto"
    >
      <a class="text-white no-underline">{t("footer.contact")}</a>
      <a class="text-white no-underline">{t("footer.news")}</a>
      <a class="text-white no-underline">{t("footer.pm")}</a>
      <a class="text-white no-underline">{t("footer.dept")}</a>
      <a class="text-white no-underline">{t("footer.treaty")}</a>
      <a class="text-white no-underline">{t("footer.about")}</a>
      <a class="text-white no-underline">{t("footer.ps")}</a>
      <a class="text-white no-underline">{t("footer.reporting")}</a>
      <a class="text-white no-underline">{t("footer.open-gov")}</a>
    </div>
  </div>
  <div class="px-2 py-5">
    <div class="flex justify-between items-center max-w-7xl mx-auto">
      <ul
        class="flex flex-col md:flex-row gap-2 text-sm text-primary md:list-disc list-inside"
      >
        <li class="list-none">
          <a href={t("footer.toc-link")}>
            {t("footer.terms-and-conditions")}
          </a>
        </li>
        <li>
          <a href={t("footer.privacy-link")}>{t("footer.privacy")}</a>
        </li>
      </ul>
      <img
        class="h-10"
        src="/wmms-blk.svg"
        alt="Symbol of the Government of Canada"
      />
    </div>
  </div>
</footer>