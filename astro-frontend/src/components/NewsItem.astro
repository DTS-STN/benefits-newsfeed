---
const { item, lang } = Astro.props;
const { Content } = await item.render();
---

<div class="py-4 space-y-2 prose max-w-none">
  <div class="space-x-2">
    <span class="text-gray-500 text-sm">
      <span>{item.data.program}</span> | <span>{new Intl.DateTimeFormat(`${lang}-CA`,{
        dateStyle: "long"
      }).format(new Date(item.data.date))}</span>
    </span>
    <span
      class={`${
        item.data.tag === "New" || item.data.tag === "Nouveau"
          ? "bg-[#498226]"
          : "bg-[#A86200]"
      } text-white px-2 py-0.5 font-semibold text-xs inline-block`}
    >
      {item.data.tag}
    </span>
  </div>
  <Content />
</div>
